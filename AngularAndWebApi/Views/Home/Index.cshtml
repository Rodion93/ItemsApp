@{
    ViewBag.Title = "Items";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    @*<script src="~/Scripts/bootstrap.js"></script>*@
    <script src="~/Content/bootstrap.css"></script>
    <script src="~/Content/Site.css"></script>
    <script src="~/AngularPart/Module.js"></script>
    <script src="~/AngularPart/Service.js"></script>
    <script src="~/AngularPart/Controller.js"></script>
    <script src="~/AngularPart/Pagination/dirPagination.js"></script>
</head>

<body data-ng-app="ItemModule" ng-controller="ItemsController">

    <h2 align="center">Items</h2>

    <div class="form-group">
        <table align="center">
            <tr>
                <td><h4>add new item</h4></td>
            </tr>
            <tr >
                <td>
                    <input class="form-control" id="name" placeholder="item name" data-ng-model="name" required/>
                </td>
                <td>
                    <input class="form-control" id="type" placeholder="item type" data-ng-model="type" required/>
                </td>
                <td><button class="btn btn-success" type="submit" ng-click="saveItem()">add item</button> </td>
            </tr>
        </table>
    </div>

    </br>

    <div class="row" id="tblItems">
        <table class="table table-bordered table-striped" align="center" >
            <tr>
                <th>Item Name (double click on field to edit)</th>
                <th>Item Type (double click on field to edit)</th>
                <th></th>
            </tr>
            <tbody id="myTable">
                <tr data-dir-paginate="item in items | itemsPerPage:4:'myPagedItems'" data-pagination-id="myPagedItems">
                    <td ng-blur="updName(item,$event)" ng-dblclick="makeEditable($event)">{{item.Name}}</td>
                    <td ng-blur="updType(item,$event)" ng-dblclick="makeEditable($event)">{{item.Type}}</td>
                    <td align="center"><button class="btn btn-danger" type="submit" ng-click="dltItem(item.Id)">Delete</button></td>
                </tr>   
            </tbody>
        </table>
        
    </div>
    <dir-pagination-controls align="center" data-pagination-id="myPagedItems" 
                             max-size="50"
                             direction-links="true"
                             boundary-links="true">
    </dir-pagination-controls>

</body>